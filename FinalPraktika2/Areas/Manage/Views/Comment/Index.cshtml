@model List<Comment>
@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid">
    <div class="container-fluid d-flex justify-content-between align-items-center">
        <h1>Authors:</h1>
        <a asp-action="create" asp-controller="Comment" class="btn btn-primary">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">User Name</th>
                <th scope="col">Founder</th>
                <th scope="col">FeedBack</th>
                <th scope="col">Raiting</th>
                <th scope="col">Image</th>
                <th colspan="2">Actions</th>
                
            </tr>
        </thead>
        <tbody>


          
            @foreach(var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                     <td>@item.UserName</td>
                     <td>@item.Founder</td>
                     <td>@item.FeedBack</td>
                     <td>@item.Raiting</td>
                     <td><img width="80px" height="80px" src="~/assets/imgs/user/@item.Image" alt=""></td>
                    <td>
                        <a asp-action="edit" asp-controller="Comment" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="delete" asp-controller="Comment" asp-route-id="@item.Id" class="btn btn-danger btn-sweet-delete">Delete</a>
                    </td>
                </tr>
            }

            


        </tbody>
    </table>
</div>

